{
  "name": "cinecom",
  "version": "0.1.0",
  "private": true,
  "description": "映画情報管理・コミュニティプラットフォーム",
  "author": {
    "name": "masakazu kobayashi",
    "email": "masakazu1967@yggdrasilroot.info"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "setup": "pnpm install && pnpm docker:up",
    "frontend": "pnpm --filter '@cinecom/frontend'",
    "shared": "pnpm --filter '@cinecom/shared'",
    "actor": "pnpm --filter '@cinecom/actor'",
    "movie": "pnpm --filter '@cinecom/movie'",
    "review": "pnpm --filter '@cinecom/review'",
    "scene": "pnpm --filter '@cinecom/scene'",
    "user": "pnpm --filter '@cinecom/user'",
    "typeorm-actor": "pnpm --filter '@cinecom/typeorm-actor'",
    "typeorm-movie": "pnpm --filter '@cinecom/typeorm-movie'",
    "typeorm-review": "pnpm --filter '@cinecom/typeorm-review'",
    "typeorm-scene": "pnpm --filter '@cinecom/typeorm-scene'",
    "typeorm-user": "pnpm --filter '@cinecom/typeorm-user'",
    "user-service": "pnpm --filter '@cinecom/user-service'",
    "movie-service": "pnpm --filter '@cinecom/movie-service'",
    "actor-service": "pnpm --filter '@cinecom/actor-service'",
    "scene-service": "pnpm --filter '@cinecom/scene-service'",
    "review-service": "pnpm --filter '@cinecom/review-service'"
  },
  "keywords": [
    "movies",
    "community",
    "nextjs",
    "nestjs",
    "typescript",
    "monorepo"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@10.13.0",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  }
}
